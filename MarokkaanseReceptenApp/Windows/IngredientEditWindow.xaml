<Window x:Class="MarokkaanseReceptenApp.Windows.IngredientEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MarokkaanseReceptenApp.Controls"
        Title="Ingrediënt" Height="300" Width="520"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <controls:LabeledTextBox Label="Naam" Text="{Binding Naam, Mode=TwoWay}" />
            <controls:LabeledTextBox Label="Hoeveelheid" Text="{Binding Hoeveelheid, Mode=TwoWay}" />

            <TextBlock Text="Recept" Margin="4,10,4,0"/>
            <ComboBox ItemsSource="{Binding Recepten}"
                      DisplayMemberPath="Naam"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding ReceptId, Mode=TwoWay}"
                      Margin="4"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuleer" Click="Cancel_Click"/>
            <Button Content="Opslaan" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
