<Window x:Class="MarokkaanseReceptenApp.Windows.CategorieEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MarokkaanseReceptenApp.Controls"
        Title="Categorie" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <controls:LabeledTextBox Label="Naam" Text="{Binding Naam, Mode=TwoWay}" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuleer" Click="Cancel_Click"/>
            <Button Content="Opslaan" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
