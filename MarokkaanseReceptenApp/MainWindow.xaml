<Window x:Class="MarokkaanseReceptenApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Marokkaanse Recepten" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Container 1: DockPanel -->

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <!-- Container 2: StackPanel -->
            <TextBlock x:Name="UserText" VerticalAlignment="Center" Margin="6"/>
            <Button Content="Refresh" Click="RefreshButton_Click"/>
            <Button Content="Logout" Click="Logout_Click"/>
        </StackPanel>

        <!-- Container 3: Grid -->
        <Grid>
            <TabControl>
                <TabItem Header="Recepten">
                    <DataGrid x:Name="ReceptenDataGrid" AutoGenerateColumns="True"/>
                </TabItem>

                <TabItem Header="Categorieën">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                            <Button Content="Add" Click="AddCategorie_Click"/>
                            <Button Content="Edit" Click="EditCategorie_Click"/>
                            <Button Content="Delete" Click="DeleteCategorie_Click"/>
                        </StackPanel>

                        <DataGrid x:Name="CategorieenDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                                <DataGridTextColumn Header="Naam" Binding="{Binding Naam}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </TabItem>


                <TabItem Header="Ingrediënten">
                    <DataGrid x:Name="IngredientenDataGrid" AutoGenerateColumns="True"/>
                </TabItem>

                <TabItem Header="Admin" x:Name="AdminTab">
                    <StackPanel Margin="10">
                        <TextBlock Text="Admin tab (later: users blokkeren / rol wijzigen)" FontWeight="Bold" />
                        <TextBlock Text="We vullen dit in de volgende stap." Margin="0,8,0,0"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
