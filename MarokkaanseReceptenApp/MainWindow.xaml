<Window x:Class="MarokkaanseReceptenApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarokkaanseReceptenApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ReceptenDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam" Binding="{Binding Naam}" Width="*"/>
                <DataGridTextColumn Header="Categorie" Binding="{Binding Categorie.Naam}" Width="*"/>
                <DataGridTextColumn Header="Beschrijving" Binding="{Binding Beschrijving}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Refresh" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="10"
            Click="RefreshButton_Click"/>
    </Grid>

</Window>
